@{
    ViewBag.Title = "Home";
}

<main>
    <div class="container">
        <div class="row align-items-start">

            <div class="col text-center">
                <h1>Welcome to PokéCenter</h1>
                <p>Build your own Pokémon team and challenge others</p>
            </div>

            <div class="card mx-auto w-50 p-2">
                <form action="" method="post">
                    <div class="mt-4 mx-5 d-flex justify-content-center">
                        <input type="email" class="form-control" id="email" name='email' aria-describedby="emailHelp"
                               placeholder="Email" required>
                    </div>
                    <div class="mt-4 mb-4 mx-5 d-flex justify-content-center w">
                        <input type="password" class="form-control" id="clave" name='clave' placeholder="Password" required>
                    </div>
                    <div class=text-center>
                        <button type="submit" class="btn btn-primary mb-1 w-75 fw-bold">Log in</button>
                        <hr class="hr" />
                    </div>
                </form>

                <div class="text-center">
                    <p>Don't have an account?</p>
                    <a href="" class="btn btn-outline-secondary mb-1 w-50 fw-bold">Sign up</a>
                </div>

            </div>
        </div>
    </div>
</main>